<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:height="50dp"
        android:text="个人信息"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/info_title">

        <TextView
            android:id="@+id/stu_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/query"
            android:layout_toStartOf="@+id/query"
            android:height="50dp"
            android:text="学     号："
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stu_id"
            android:layout_alignBottom="@+id/stu_id"
            android:layout_toEndOf="@+id/stu_id"
            android:layout_toRightOf="@+id/stu_id"
            android:height="50dp"
            android:text="学号"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stu_id"
            android:layout_alignStart="@+id/stu_id"
            android:layout_below="@+id/stu_id"
            android:height="50dp"
            android:text="姓     名："
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stu_name"
            android:layout_alignBottom="@+id/stu_name"
            android:layout_toEndOf="@+id/stu_id"
            android:layout_toRightOf="@+id/stu_id"
            android:height="50dp"
            android:text="姓名"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stu_name"
            android:layout_alignStart="@+id/stu_name"
            android:layout_below="@+id/stu_name"
            android:height="50dp"
            android:text="性     别："
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_gender2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stu_gender"
            android:layout_alignBottom="@+id/stu_gender"
            android:layout_toEndOf="@+id/stu_id"
            android:layout_toRightOf="@+id/stu_id"
            android:height="50dp"
            android:text="性别"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_vcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stu_gender"
            android:layout_alignStart="@+id/stu_gender"
            android:layout_below="@+id/stu_gender"
            android:height="50dp"
            android:text="校验码："
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_vcode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stu_vcode"
            android:layout_alignBottom="@+id/stu_vcode"
            android:layout_toEndOf="@+id/stu_id"
            android:layout_toRightOf="@+id/stu_id"
            android:height="50dp"
            android:text="校验码"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stu_vcode"
            android:layout_alignStart="@+id/stu_vcode"
            android:layout_below="@+id/stu_vcode"
            android:height="50dp"
            android:text="宿舍号："
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_room2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stu_room"
            android:layout_alignBottom="@+id/stu_room"
            android:layout_toEndOf="@+id/stu_id"
            android:layout_toRightOf="@+id/stu_id"
            android:height="50dp"
            android:text="宿舍号"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stu_vcode"
            android:layout_alignStart="@+id/stu_vcode"
            android:layout_below="@+id/stu_room"
            android:height="50dp"
            android:text="楼     号："
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_building2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stu_building"
            android:layout_alignBottom="@+id/stu_building"
            android:layout_toEndOf="@+id/stu_id"
            android:layout_toRightOf="@+id/stu_id"
            android:height="50dp"
            android:text="楼号"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stu_vcode"
            android:layout_alignStart="@+id/stu_vcode"
            android:layout_below="@+id/stu_building"
            android:height="50dp"
            android:text="校     区："
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_location2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stu_location"
            android:layout_alignBottom="@+id/stu_location"
            android:layout_toEndOf="@+id/stu_id"
            android:layout_toRightOf="@+id/stu_id"
            android:height="50dp"
            android:text="校区"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stu_vcode"
            android:layout_alignStart="@+id/stu_vcode"
            android:layout_below="@+id/stu_location"
            android:height="50dp"
            android:text="年     级："
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stu_grade2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stu_grade"
            android:layout_alignBottom="@+id/stu_grade"
            android:layout_toEndOf="@+id/stu_id"
            android:layout_toRightOf="@+id/stu_id"
            android:height="50dp"
            android:text="年级"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stu_grade"
            android:layout_centerHorizontal="true"
            android:height="50dp"
            android:background="@drawable/text_bg"
            android:gravity="center"
            android:paddingBottom="2dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="2dip"
            android:text="   选择宿舍   "
            android:textColor="@color/white"
            android:textSize="25sp" />


    </RelativeLayout>

</RelativeLayout>
